<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="buyAmount" onchange="buyChange()" placeholder="amount_to_buy" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %>/<%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="buyPrice" onchange="buyChange()" placeholder="price" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="buyTotal" onchange="buyChange()" placeholder="total" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label trn" data-container="body" data-toggle="popover" data-placement="right" data-content="expires_explanation">expires</label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="buyExpires" placeholder="numberOfBlocks" value="10000" />
    </div>
  </div>
  <span id="buyInCross" class="warning"></span>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" style="width: 100%;" class="btn btn-success trn" id="buySubmit">buy</button>
    </div>
  </div>
</form>

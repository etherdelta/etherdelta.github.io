<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sellAmount" onchange="sellChange()" placeholder="amount_to_sell" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %>/<%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sellPrice" onchange="sellChange()" placeholder="price" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sellTotal" onchange="sellChange()" placeholder="total" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label trn" data-container="body" data-toggle="popover" data-placement="right" data-content="expires_explanation">expires</label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sellExpires" placeholder="Number_of_blocks" value="10000" />
    </div>
  </div>
  <span id="sellInCross" class="warning"></span>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" style="width: 100%;" class="btn btn-danger trn" id="sellSubmit">sell</button>
    </div>
  </div>
</form>
